[Unit]
Description=Time Made Visible Camera and Upload Controller
After=network.target
# Try to restart forever!
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
# Wait a bit before restart
RestartSec=60
# root required to "systemd start" other services
#User=root
# but can use pi after configuring sudoers 
User=pi

ExecStart=/usr/local/bin/tmv-controller --config-file /etc/tmv/camera.toml

[Install]
WantedBy=multi-user.target
